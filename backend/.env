FLASK_APP=app.py
FLASK_ENV=production
DEBUG=False
HOST=0.0.0.0
PORT=5000
MAX_FILE_SIZE=100
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=outputs
TEMP_FOLDER=temp
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,docx,doc,pptx,ppt,xlsx,xls,html

# Cache Cleanup Settings (for Free Tier Hosting)
# Files older than this many seconds will be auto-deleted
CACHE_MAX_AGE_SECONDS=300

# How often to run background cleanup (in seconds)
CACHE_CLEANUP_INTERVAL=120

# Maximum cache size in MB before aggressive cleanup kicks in
CACHE_MAX_SIZE_MB=100
